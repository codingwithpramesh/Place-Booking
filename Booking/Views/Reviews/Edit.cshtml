@model DataAccessLayer.Entities.Reviews;

@{
    ViewData["Title"] = "Edit Reviews";
}
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="form-group">
                <label asp-for="BookingId"> Booking Id</label>
                <input asp-for="BookingId" class="form-control" />
                <span asp-validation-for="BookingId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReviewBody">Rating</label>
                <input asp-for="ReviewBody" class="form-control" />
                <span asp-validation-for="ReviewBody"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegisterId">Register ID</label>
                <input asp-for="RegisterId" class="form-control" />
                <span asp-validation-for="RegisterId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParentId">Parent Id</label>
                <input asp-for="ParentId" class="form-control" />
                <span asp-validation-for="ParentId"></span>
            </div>

            <div class="form-group">
                <button type="submit" asp-action="Edit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </div>

</form>
