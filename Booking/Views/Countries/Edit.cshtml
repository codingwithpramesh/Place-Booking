@model Countries

@{
    ViewData["Title"] = "Edit Countries";
}
<form asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="form-group">
                <label asp-for="CountryCode">Country Code</label>
                <input asp-for="CountryCode" class="form-control" />
                <span asp-validation-for="CountryCode"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountryName">Country Code</label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName"></span>
            </div>

            <div class="form-group">
                <button type="submit" asp-action="Edit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </div>

</form>
