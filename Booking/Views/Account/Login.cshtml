@model Register

@{
    ViewData["Title"] = "Edit Countries";
}
<form asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="form-group">
                <label asp-for="Email"> UserName </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="password">Password </label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password"></span>
            </div>

            <div class="form-group">
                <label asp-for="Roles">Roles </label>
               <select asp-for="Roles" class="form-control">
                   <option>Select</option>
                   <option value="1">Admin</option>
                   <option value="2">User</option>
               </select>
                <span asp-validation-for="Roles"></span>
            </div>

            <div class="form-group">
               <button asp-action="Login" class="btn btn-primary"  >Login</button>
            </div>
        </div>
    </div>
</form>